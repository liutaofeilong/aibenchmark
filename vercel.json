{
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          ".nuxt/dist/server/**/*",
          "server/**/*"
        ]
      }
    }
  ],
  "buildCommand": "NITRO_PRESET=vercel-edge nuxt build",
  "framework": "nuxt"
} 