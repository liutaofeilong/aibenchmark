{
  "builds": [
    {
      "src": "nuxt.config.ts",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": [
          ".nuxt/dist/server/**/*",
          "server/**/*"
        ],
        "generateStaticRoutes": true,
        "excludeFiles": ["node_modules/@oxc-parser/**/*"]
      }
    }
  ],
  "buildCommand": "NITRO_PRESET=vercel nuxt build",
  "framework": "nuxt"
} 